<%= form_with(model: post) do |form| %>
  <% if post.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
        <% post.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-2">
    <%= form.label :title, style: "display: block", class:"form-label"%>
    <%= form.text_field :title , class:"form-control"%>
  </div>

  <div class="mb-2">
    <%= form.label :content, style: "display: block", class:"form-label"%>
    <%= form.rich_text_area :content, class:"form-control"%>
  </div>

  <!--Pass current user id session to post-->
  <%= form.number_field :user_id , id: :post_user_id, class:"form-control", value:current_user.id, type: :hidden %>

  <div>
    <%= form.submit :Submit, class:"btn btn-outline-info"%>
  </div>
<% end %>
